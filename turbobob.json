{
	"for_description_of_this_file_see": "https://github.com/function61/turbobob",
	"version_major": 1,
	"project_name": "varasto",
	"subrepos": [
		{
			"source": "https://github.com/function61/f61ui.git",
			"kind": "git",
			"destination": "frontend/f61ui",
			"revision": "0dd69f6"
		}
	],
	"builders": [
		{
			"name": "default",
			"uses": "docker://fn61/buildkit-golang:20191122_1713_315df733",
			"mount_source": "",
			"mount_destination": "/go/src/github.com/function61/varasto",
			"workdir": "/go/src/github.com/function61/varasto",
			"dev_pro_tips": [
				"to mess with FUSE, 'apt install fuse', add to Docker: --privileged --cap-add SYS_ADMIN --cap-add MKNOD --device /dev/fuse"
			],
			"commands": {
				"build": ["bin/build.sh"],
				"dev": ["bash"]
			},
			"dev_ports": ["8066:8066"]
		},
		{
			"name": "frontend",
			"uses": "docker://fn61/buildkit-js:20191001_1249_feea1b33",
			"mount_destination": "/workspace",
			"commands": {
				"build": ["bin/build-frontend.sh"],
				"dev": ["bash"]
			}
		},
		{
			"name": "publisher",
			"uses": "docker://fn61/buildkit-publisher:20190206_1058_d35b3939",
			"mount_destination": "/workspace",
			"commands": {
				"publish": ["publish.sh", "rel/*"],
				"dev": ["bash"]
			},
			"env": {
				"BINTRAY_PROJECT": "function61/dl/varasto"
			},
			"pass_envs": [
				"BINTRAY_CREDS"
			]
		}
	],
	"os_arches": {
		"linux-amd64": true,
		"linux-arm": true,
		"windows-amd64": true
	}
}
